<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>
    pofresh
  </title>
  <meta http-equiv="content-type" content="text/html;charset=utf-8" />
  <meta http-equiv="content-style-type" content="text/css" />
  <meta http-equiv="content-scripte-type" content="text/javascript" />
  <meta name="author" content="netease" />
  <meta name="version" content="1.0" />
  <meta name="keywords" content="pofresh" />
  <link type="text/css" rel="stylesheet" href="css/base.css" />
  <script src="js/lib/socket.io.js">
  </script>
  <script src="js/lib/pofresh.js">
  </script>
  <script type="text/javascript">
  var pofresh = window.pofresh;
  var host = "127.0.0.1";
  var port = "3010";
  var connected = false;
  var node, para;
  function show() {
    if(!connected) {
      pofresh.init({
        host: host,
        port: port
      }, function() {
        pofresh.request("connector.entryHandler.entry", "hello pofresh", function(data) {
          para = document.getElementById('result');
          node = document.createTextNode(data.msg);
          para.appendChild(node);
          connected = true;
        });
      });
    } else {
      para.removeChild(node);
      pofresh.request("connector.entryHandler.entry", "hello pofresh", function(data) {
        console.log(data.msg);
        para.appendChild(node);
      });
    }
  }
  </script>
</head>
<body>
  <div class="g-doc">
    <div class="g-banner" style="border:none">
      <div class="logo">
        <div class="img"></div>
      </div>
    </div>
    <div class="g-background">
      <div class="g-content">
        Welcome to pofresh
      </div>
    </div>
    <div class="g-link">
      Home:
      <a href="https://github.com/NetEase/pofresh">https://github.com/NetEase/pofresh</a>
    </div>
    <div class="g-result">
      <p id='result'></p>
    </div>
    <div class="g-button">
      <input id="test" type="button" value="Test Game Server" onclick="show()"/>
    </div>
  </div>
</body>
</html>